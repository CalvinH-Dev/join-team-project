{
	"name": "join",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"lint": "ng lint",
		"prettier:write": "prettier --config ./.prettierrc --write .",
		"stylelint:lint": "stylelint '**/*.{css,scss,less}'",
		"stylelint:fix": "stylelint '**/*.{css,scss,less}' --fix",
		"eslint:lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
		"setup:firebase": "ts-node --project scripts/tsconfig.json scripts/setup-firebase.ts",
		"reset:firebase": "ts-node --project scripts/tsconfig.json scripts/reset-firebase.ts",
		"migrate:tasks": "ts-node --project scripts/tsconfig.json scripts/migrate-tasks.ts",
		"migrate:contacts": "ts-node --project scripts/tsconfig.json scripts/migrate-contacts.ts",
		"migrate:all": "npm run migrate:tasks && npm run migrate:contacts"
	},
	"private": true,
	"dependencies": {
		"@angular/cdk": "^20.2.7",
		"@angular/common": "^20.1.0",
		"@angular/compiler": "^20.1.0",
		"@angular/core": "^20.1.0",
		"@angular/fire": "^20.0.1",
		"@angular/forms": "^20.1.0",
		"@angular/platform-browser": "^20.1.0",
		"@angular/router": "^20.1.0",
		"firebase": "^11.10.0",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0",
		"zone.js": "~0.15.0"
	},
	"devDependencies": {
		"@angular/build": "^20.1.5",
		"@angular/cli": "^20.1.5",
		"@angular/compiler-cli": "^20.1.0",
		"@types/jasmine": "~5.1.0",
		"@types/node": "^24.6.0",
		"angular-eslint": "20.3.0",
		"eslint": "^9.35.0",
		"jasmine-core": "~5.8.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"postcss-html": "^1.8.0",
		"prettier": "3.6.2",
		"stylelint": "^16.24.0",
		"stylelint-config-standard-scss": "^16.0.0",
		"ts-node": "^10.9.2",
		"typescript": "~5.8.2",
		"typescript-eslint": "8.40.0"
	}
}
