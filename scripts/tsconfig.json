{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"include": ["*.ts"],
	"exclude": ["node_modules"]
}